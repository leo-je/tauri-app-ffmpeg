{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "convert",
  "version": "0.1.0",
  "identifier": "com.convert-app.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  }, 
  "app": {
    "windows": [
      {
        "title": "格式转换器",
        "width": 800,
        "height": 700,
       "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shellx":{},
    "updater": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
    
}
