{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "convert",
  "version": "0.1.0",
  "identifier": "com.convert-app.app",
  "bundle": {
    "resources":[
      "assets/win/*",
      "assets/win/**/*"
    ],
    "windows": {
      "nsis":{
        "compression": "zlib",
        "languages": ["中文","en-US"],
        "displayLanguageSelector": true,
        "customLanguageFiles": {
          "中文": "./assets/win/languages/SimpChinese.nsh",
          "en-US": "./assets/win/languages/English.nsh"
        },
        "installMode": "both"
      },
      
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
